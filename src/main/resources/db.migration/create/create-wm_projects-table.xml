<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2021-11-04-01-53" author="Artamonov Alexey">
        <createTable tableName="WM_PROJECTS">

            <column name="OUID" type="bigserial">
                <constraints primaryKey="true"/>
            </column>

            <column name="A_TITLE" type="character varying">
                <constraints nullable="false"/>
            </column>

            <column name="AN_AUTHOR" type="bigint">
                <constraints foreignKeyName="WM_PEOPLE"
                             references="WM_PEOPLE(OUID)" nullable="false"/>
            </column>

            <column name="A_CLIENT_COMPANY" type="bigint">
                <constraints foreignKeyName="WM_COMPANIES"
                             references="WM_COMPANIES(OUID)" nullable="false"/>
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>