<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2021-11-04-02-05" author="Artamonov Alexey">
        <createTable tableName="WM_TASKS">

            <column name="OUID" type="bigserial">
                <constraints primaryKey="true"/>
            </column>

            <column name="A_NAME" type="character varying">
                <constraints nullable="false"/>
            </column>

            <column name="A_DATE" type="character varying">
                <constraints/>
            </column>

            <column name="A_STATUS" type="bigserial">
<!--                <constraints foreignKeyName="WmStatus_that_WmTasks"-->
                <constraints foreignKeyName="WM_STATUS"
                             references="WM_STATUS(OUID)" nullable="false"/>
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>