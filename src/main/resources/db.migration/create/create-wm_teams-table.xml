<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2021-11-04-02-09" author="Artamonov Alexey">
        <createTable tableName="wm_teams">

            <column name="OUID" type="bigserial">
                <constraints primaryKey="true"/>
            </column>

            <column name="A_PERSON" type="bigint">
                <constraints foreignKeyName="WM_PEOPLE"
                             references="WM_PEOPLE(OUID)" nullable="false"/>
            </column>

            <column name="A_TEAM" type="bigint">
                <constraints foreignKeyName="WM_DEVELOPMENTS"
                             references="WM_DEVELOPMENTS(OUID)" nullable="false"/>
            </column>

            <column name="START_DATE" type="character varying">
                <constraints nullable="false"/>
            </column>

            <column name="END_DATE" type="character varying">
                <constraints/>
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>