<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="2021-11-04-01-46" author="Artamonov Alexey">
        <createTable tableName="WM_HISTORY_OF_PROJECTS_CHANGES">

            <column name="OUID" type="bigserial">
                <constraints primaryKey="true"/>
            </column>

            <column name="A_NUMBER" type="bigint">
                <constraints foreignKeyName="WM_PROJECTS"
                             references="WM_PROJECTS(OUID)" nullable="false"/>
            </column>

            <column name="START_DATE" type="character varying">
                <constraints nullable="false"/>
            </column>

            <column name="END_DATE" type="character varying">
                <constraints nullable="false"/>
            </column>

            <column name="A_RESPON_COMPANY" type="bigint">
                <constraints foreignKeyName="WM_PEOPLE"
                             references="WM_PEOPLE(OUID)" nullable="false"/>
            </column>

            <column name="A_RESPON_OF_CLIENT_COMPANY" type="bigint">
                <constraints foreignKeyName="WM_PEOPLE" nullable="false"/>
            </column>

        </createTable>
    </changeSet>
</databaseChangeLog>